<section class="content">
  <header class="content__title">
    <h1>ARTISTS</h1>

    <div class="actions">
      <a href="" class="actions__item zmdi zmdi-trending-up"></a>
      <a href="" class="actions__item zmdi zmdi-check-all"></a>

      <div class="dropdown actions__item">
        <i data-toggle="dropdown" class="zmdi zmdi-more-vert"></i>
        <div class="dropdown-menu dropdown-menu-right">
          <a href="" class="dropdown-item">Refresh</a>
          <a href="" class="dropdown-item">Manage Widgets</a>
          <a href="" class="dropdown-item">Settings</a>
        </div>
      </div>
    </div>
  </header>

  <div class="card">
    <div class="card-header">
      <h2 class="card-title">Artist Directory</h2>
      <small class="card-subtitle">Search for Artists by name, album, or song title.</small>
    </div>

    <div class="table-responsive">
      <table id="grid-artists" class="table">
        <thead>
          <tr>
            <th data-column-id="id" data-type="numeric" data-identifier="true">ID</th>
            <th data-column-id="name" data-order="asc" > Name</th>
          </tr>
        </thead>
      </table>
    </div>

  </div>

</div>
</div>
</section>

<%= content_for :body_end do %>
<%= init_grid(
  "grid-artists",
  url: "/artists.json",
  primaryKey: "id",
  formatters: {

    },
    handlers: {
      click: { fn: :inspect, url: "/artists", identifier: 'id' }
    }
    ) %>
    <% end %>
